{
  "name": "memory-download",
  "version": "1.0.0",
  "description": "Desktop application for downloading your Snapchat memories.",
  "license": "UNLICENSED",
  "author": {
    "name": "Christan Lisle",
    "email": "lisleachristian@gmail.com",
    "url": "http://www.christianlisle.com"
  },
  "main": "src/main.js",
  "scripts": {
    "dev": "DEBUG_MODE=true electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fs": "^0.0.1-security",
    "node-fetch": "^2.6.1",
    "video-stitch": "^1.7.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "^16.0.7"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/public/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "memory-download"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32",
            "mas"
          ],
          "config": {
            "name": "memory-download"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "memory-download"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "memory-download"
          }
        }
      ]
    }
  }
}
